<style>
  body {
    background: linear-gradient(to right, #4286f4, #373B44) !important;
    /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
  }

  body>.ui.grid {
    height: 100%;
  }

  .column {
    max-width: 450px;
  }

  #header {
    color: white
  }

  #link1 {
    font-size: 12px;
  }

  #link2 {
    font-size: 12px;
  }

  #link:hover {
    text-decoration: underline;
  }

  #sb {
    border-radius: 100px;
  }
</style>

<br>
<br>
<br>
<br>
<br>
<div class="ui middle aligned center aligned stackable grid ">
  <div class="column">
    <h2 class="ui basic center aligned header" id="log-header">
      <img class="image" src="letterman_logo.png" alt="letterman"> Sign-In to your Account
    </h2>
    <div class="ui center aligned raised segment">
      <h3 class="ui small center aligned header">Quick and convenient access without having to register</h3>
      <br>
      <div class="ui vertical buttons">
        <button class="ui circular {{if loading "disabled"}} google plus button" {{action "authGoogle"}} id="sb">
          <i class="fab fa-google"></i>
          Sign In Via Google
        </button>
        <br>
        <button class="ui circular {{if loading "disabled"}}  facebook button" {{action "authFacebook"}} id="sb">
          <i class="fab fa-facebook"></i>
          Sign In Via Facebook
        </button>
        <br>

        <button class="ui circular {{if loading "disabled"}} twitter button" {{action "authTwitter"}} id="sb">
          <i class="fab fa-twitter"></i>
          Sign In Via Twitter
        </button>
        <br>
        <button class="ui circular {{if loading "disabled"}} secondary button" {{action "authGithub"}} id="sb">
          <i class="fab fa-github"></i>
          Sign In Via GitHub
        </button>
        <br>
        <button class="ui circular {{if loading "disabled"}} secondary basic button" {{action "authMicrosoft"}} id="sb">
          <i class="fab fa-microsoft"></i>
          Sign In Via Microsoft
        </button>
      </div>
      <br>
      <br>
      <br>
      <a href="/" id="link">Go back to Home</a> - 
      {{#link-to "privacy-policy" id="link1"}}
        Privacy Policy 
      {{/link-to}} - 
      {{#link-to "terms-of-service" id="link2"}}
        Terms of Service
      {{/link-to}}
    </div>
  </div>
</div>