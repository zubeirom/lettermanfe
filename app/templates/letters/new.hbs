{{!-- template-lint-disable no-unused-block-params --}}
<div class="row">
  <h2 class="ui huge dividing header">New Document</h2>
</div>
<br>
<div class="row">
  <div class="ui stackable grid">
    <div class="sixteen wide column">
      <div class="ui form">
        <div class="field">
          <label for="">Title of Document</label>
          {{input value=newtitle type=text placeholder="Enter title..."}}
        </div>
        <div class="field">
          <label for="">Upload Document</label>
        </div>
        {{#file-upload name="image"
                       accept="image/*"
                       onfileadd=(action "uploadImage") as |queue|}}
          <a role="button" class="ui {{if load "loading"}} {{if loader "disabled"}} button" id="uploadButton">
            Upload File
          </a>
          {{this.image.name}}
        {{/file-upload}} 
        <br>
        <br>
        <div class="field">
          <label for="">Add label</label>
          
        </div>
        <div class="field">
          <label for="">The image get's processed through Optical Character Recognition (OCR) and the help of Artificial Intelligence and will give you it's content in machine-encoded text. <a href="https://sen.wikipedia.org/wiki/Optical_character_recognition" target="_blank" rel="noreferrer">Learn More</a> <br> <br> Click on save to see the magic <i class="fas fa-magic"></i> </label>
          <button class="ui green {{if loader "loading"}} button" {{action "save"}}>
            <i class="save icon"></i>
            Save
          </button>
        </div>
      </div>
    </div>
  </div>
</div>